# Railway Environment Variables Template for Medusa v2

# Database Configuration
DATABASE_URL=${{ Postgres.DATABASE_PUBLIC_URL }}

# Redis Configuration (with family=0 for IPv6/IPv4 compatibility)
REDIS_URL=${{ Redis.REDIS_PUBLIC_URL }}?family=0

# Security Secrets (Generate using: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
COOKIE_SECRET=your-cookie-secret-here

# CORS Configuration
STORE_CORS=${{ RAILWAY_PUBLIC_DOMAIN }}
ADMIN_CORS=${{ RAILWAY_PUBLIC_DOMAIN }}
AUTH_CORS=${{ RAILWAY_PUBLIC_DOMAIN }}

# Admin Panel Configuration
MEDUSA_BACKEND_URL=https://${{ RAILWAY_PUBLIC_DOMAIN }}
MEDUSA_ADMIN_BACKEND_URL=https://${{ RAILWAY_PUBLIC_DOMAIN }}
DISABLE_MEDUSA_ADMIN=false

# Port Configuration (Railway automatically sets this)
PORT=${{ PORT }}

# Node Environment
NODE_ENV=production

# Optional: Stripe Configuration
STRIPE_API_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Optional: Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_JWT_SECRET=your-jwt-secret